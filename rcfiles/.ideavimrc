set encoding=utf-8
set fileencoding=utf-8
scriptencoding utf-8
set clipboard=unnamedplus

" LeaderキーをSpaceにする
let mapleader = "\<Space>"

" Ctrl + j で Esc
inoremap <silent> jj <Esc>
" ; と : を入れ替え
noremap ; :
" カーソル移動
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-h> <Left>
inoremap <C-l> <Right>
inoremap <C-y> <BS>
inoremap <C-v> <Del>
" 分割ウィンドウ移動 
noremap sh <C-W>h
noremap sj <C-W>j
noremap sk <C-W>k
noremap sl <C-W>l

" noremap <Leader>h 0
" noremap <Leader>l $
noremap <Space>h 0
noremap <Space>l $

" ウィンドウを水平に分割
nnoremap ss :<C-u>sp<CR>
" ウィンドウを垂直に分割
nnoremap sv :<C-u>vs<CR>
" ウィンドウを閉じる
nnoremap sq :<C-u>q<CR>
" バッファを閉じる
nnoremap sQ :<C-u>bd<CR>
" コマンド履歴
nnoremap q; q:

" j,kによる移動を折り返されたテキストでも自然にふるまう
nnoremap j gj
nnoremap k gk
